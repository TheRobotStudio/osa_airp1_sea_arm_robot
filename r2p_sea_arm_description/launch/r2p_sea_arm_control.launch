<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find r2p_sea_arm_description)/config/r2p_sea_arm_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="control_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/r2p_sea_arm" args="joint_state_controller
					  joint_base_shoulder_pitch_position_controller
					  joint_shoulder_pitch_yaw_position_controller
                      joint_shoulder_yaw_upper_arm_position_controller
                      joint_upper_arm_forearm_position_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">
    <remap from="/joint_states" to="/r2p_sea_arm/joint_states" />
  </node>

</launch>
